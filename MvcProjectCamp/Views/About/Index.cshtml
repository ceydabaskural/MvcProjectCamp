<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">




@model List<MvcProjectCamp.EntityLayer.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About List</h2>
<table class="table table-bordered">
    <tr>
        <th>About No</th>
        <th>About Text-1</th>
        <th>About Text-2</th>
        <th>About Image-1</th>
        <th>About Image-2</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Detail1</td>
            <td>@item.Detail2</td>
            <td>@item.ImageUrl1</td>
            <td>@item.ImageUrl2</td>
            <td>
                <a href="@Url.Action("Status", "About", new { id = item.AboutId })">
                    @if (item.IsActive)
                    {
                        <i class="fas fa-times-circle text-danger"> Passive</i>
                    }
                    else
                    {
                        <i class="fas fa-check-circle text-success"> Active</i>
                    }
                </a>
            </td>
        </tr>
    }

</table>
@Html.Action("AboutPartial", "About")