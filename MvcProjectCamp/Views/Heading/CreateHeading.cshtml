@model MvcProjectCamp.EntityLayer.Concrete.Heading

    @{
        ViewBag.Title = "CreateHeading";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>Create Heading</h2>
    <br />
    @using (Html.BeginForm("CreateHeading", "Heading", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Heading Name")
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingName)
            <br />
            @Html.Label("Category")
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryId)
            <br />
            @Html.Label("Author")
            @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.author, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterId)
            <br />
            <button class="btn btn-info">Create Heading</button>
        </div>
    }

