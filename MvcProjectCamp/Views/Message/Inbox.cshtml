@model List<MvcProjectCamp.EntityLayer.Concrete.Message>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Inbox</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            @Html.Action("MessageSideBar", "Contact")
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Private Messages</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Search Mail">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="mailbox-controls">
                            <!-- Check all button -->
                            <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                                <i class="far fa-square"></i>
                            </button>
                            <div class="btn-group">
                                <a href="/Message/DeleteMessage/" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></a>
                                <a href="#" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></a>
                                <a href="" class=" btn btn-default btn-sm"><i class="fas fa-share"></i></a>
                            </div>
                            <!-- /.btn-group -->
                            <a href="/Message/Inbox" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></a>
                            <div class="float-right">
                                1-50/200
                                <div class="btn-group">
                                    <a href="/Contact/Index/" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></a>
                                    <a href="" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></a>
                                </div>
                                <!-- /.btn-group -->
                            </div>
                            <!-- /.float-right -->
                        </div>
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="check1">
                                                    <label for="check1"></label>
                                                </div>
                                            </td>
                                            <td class="mailbox-star"><a href="/Message/GetInboxDetails/@item.MessageId"><i class="fas fa-star text-warning"></i></a></td>
                                            <td class="mailbox-name"><a href="/Message/GetInboxDetails/@item.MessageId">@item.SenderMail</a></td>
                                            <td class="mailbox-subject">
                                                <b>@item.Subject</b> - @item.MessageContent.Substring(0, 2).Length...
                                            </td>
                                            <td>
                                                <a href="@Url.Action("MarkAsRead", "Message", new { id = item.MessageId })">
                                                    @if (item.IsRead)
                                                    {
                                                        <i class="fas fa-envelope text-danger"> Mark as Unread</i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-envelope-open text-success"> Mark as Read</i>
                                                    }</a>
</td>
                                            <td class="mailbox-date"></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer p-0">
                        <div class="mailbox-controls">
                            <!-- Check all button -->
                            <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                                <i class="far fa-square"></i>
                            </button>
                            <div class="btn-group">
                                <a href="/Message/DeleteMessage/" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></a>
                                <a href="#" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></a>
                                <a href="" class=" btn btn-default btn-sm"><i class="fas fa-share"></i></a>
                            </div>
                            <!-- /.btn-group -->
                            <a href="/Message/Inbox" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></a>
                            <div class="float-right">
                                1-50/200
                                <div class="btn-group">
                                    <a href="/Contact/Index/" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></a>
                                    <a href="" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></a>
                                </div>
                                <!-- /.btn-group -->
                            </div>
                            <!-- /.float-right -->
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</body>
</html>

<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

