@model MvcProjectCamp.EntityLayer.Concrete.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- jQuery Kütüphanesi (İlk Yüklenecek) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- CSS Dosyaları (HTTPS ile Güncellenmiş) -->
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<h3>Create New Category</h3>
<br />
@using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post, new { id = "categoryForm" }))
{
    <div class="form-group">
        @Html.Label("Category Name")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        <br />
        @Html.Label("Description")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description)
        <br />
        <br />
        <button id="submitBtn" class="btn btn-info mt-3">Create</button>
    </div>
}



<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = '@TempData["SuccessMessage"]';
        if (message && message !== "") {
            Swal.fire({
                title: 'Success!',
                text: message,
                icon: 'success',
                confirmButtonText: 'OK'
            });
        }
    });
</script>



